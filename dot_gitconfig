  d   = diff
  ds  = diff --stat
  h   = help
  m   = merge
  mt  = mergetool
  pl  = pull
  p   = push
  pforce = push --force
  rb  = rebase
  rs  = reset
  rv  = revert
  sh  = stash
  st  = status

  # the plainest one
  l  = log --topo-order --pretty=format:'%C(yellow)%h %C(cyan)%cn %C(blue)%cr%C(reset) %s %C(red)%d'

